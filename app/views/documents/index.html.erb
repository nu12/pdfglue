<h1>Documents</h1>

<%= link_to 'New Document', new_document_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= link_to 'Output', rails_blob_url(document.output),  target: :_blank %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Delete', document, data: { "turbo-confirm": 'Are you sure?', "turbo-method": :delete } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

